{
  "name": "moodmuse-ui",
  "version": "0.2.0",
  "private": false,
  "description": "A vibrant and expressive React component library for building modern user interfaces.",
  "author": "Milan Thapa",
  "license": "MIT",
  "keywords": [
    "react",
    "typescript",
    "components",
    "ui",
    "styled-components",
    "moodmuse"
  ],
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/moodmuse-ui.umd.js",
  "module": "./dist/moodmuse-ui.es.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/moodmuse-ui.es.js",
      "require": "./dist/moodmuse-ui.umd.js"
    }
  },
  "scripts": {
    "dev": "vite",
    "clean": "rm -rf dist",
    "build": "run-s clean build:types build:js",
    "build:types": "tsc --project tsconfig.build.json",
    "build:js": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "styled-components": ">=6.0.0"
  },
  "dependencies": {
    "@iconify/react": "^6.0.0",
    "framer-motion": "^12.18.1"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.0.0",
    "@eslint/js": "^9.25.0",
    "@storybook/addon-a11y": "^9.0.10",
    "@storybook/addon-docs": "^9.0.10",
    "@storybook/addon-vitest": "^9.0.10",
    "@storybook/react-vite": "^9.0.10",
    "@types/node": "^24.0.3",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@types/styled-components": "^5.1.34",
    "@vitejs/plugin-react": "^4.4.1",
    "@vitest/browser": "^3.2.3",
    "@vitest/coverage-v8": "^3.2.3",
    "eslint": "^9.25.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "eslint-plugin-storybook": "^9.0.10",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.53.0",
    "prettier": "^3.5.3",
    "storybook": "^9.0.10",
    "stylelint": "^16.20.0",
    "stylelint-config-standard": "^38.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.3"
  }
}
